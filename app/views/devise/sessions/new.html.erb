<div class="container">
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 well">
      <h3 class="text-center">Connexion</h3>
      <br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :Vote_email %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'email@example.com' %>
      </div>
      <div class="form-group">
        <%= f.label :Votre_mot_de_passe %>
        <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: '*******' %>
      </div>
        <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :se_souvenir_de_moi %>
        </div>
      <% end -%>
      <div class="actions text-center">
        <%= f.submit 'Connexion', class: 'btn btn-native' %>
      </div>
      <% end %>
      <br>
      <%= render 'devise/shared/links' %>
    </div>
  </div>

</div>